<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="org.eclipse.ui.model.WorkbenchContentProvider"
            name="name"
            labelProvider="org.eclipse.ui.model.WorkbenchLabelProvider"
            id="eu.hohenegger.scratchpad.control.navigatorContent">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IResource">
            </instanceof>
         </triggerPoints>
         <dropAssistant
               class="eu.hohenegger.scratchpad.ui.viewer.DropAdapterAssistant"
               id="eu.hohenegger.scratchpad.ui.viewer.dropAssistant">
            <possibleDropTargets>
               <or>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IFolder">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                  </adapt>
               </or>
            </possibleDropTargets>
         </dropAssistant>
         <commonSorter
               class="eu.hohenegger.scratchpad.ui.viewer.Sorter">
         </commonSorter>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="eu.hohenegger.scratchpad">
         <includes>
            <contentExtension
                  pattern="eu.hohenegger.scratchpad.control.navigatorContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewer
            popupMenuId="eu.hohenegger.scratchpad"
            viewerId="eu.hohenegger.scratchpad">
      </viewer>
      <dragAssistant
            class="eu.hohenegger.scratchpad.ui.viewer.DragAdapterAssistant"
            viewerId="eu.hohenegger.scratchpad">
      </dragAssistant>
   </extension>
   <extension
         id="eu.hohenegger.scratchpad.ui.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            uri="fragment.e4xmi">
      </fragment>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:eu.hohenegger.scratchpad">
         <command
               commandId="eu.hohenegger.scratchpad.newFile"
               icon="icons/add.gif"
               label="New File..."
               style="push">
         </command>
         <command
               commandId="eu.hohenegger.scratchpad.newFolder"
               icon="icons/newfolder_wiz.gif"
               label="New Folder..."
               style="push">
         </command>
         <command
               commandId="eu.hohenegger.scratchpad.delete"
               icon="icons/delete_obj.gif"
               label="Delete"
               style="push">
         </command>
         <command
               commandId="eu.hohenegger.scratchpad.rename"
               icon="icons/correction_linked_rename.gif"
               label="Rename..."
               style="push">
         </command>
         <separator
               name="eu.hohenegger.scratchpad.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="eu.hohenegger.scratchpad.ui.notification"
               label="Toggle Change Notification"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.hohenegger.scratchpad.ui.handler.e3wrapper.NewFileHandlerWrapper"
            id="eu.hohenegger.scratchpad.newFile"
            name="New File">
      </command>
      <command
            defaultHandler="eu.hohenegger.scratchpad.ui.handler.e3wrapper.NewFolderHandlerWrapper"
            id="eu.hohenegger.scratchpad.newFolder"
            name="New Folder">
      </command>
      <command
            defaultHandler="eu.hohenegger.scratchpad.ui.handler.e3wrapper.DeleteHandlerWrapper"
            id="eu.hohenegger.scratchpad.delete"
            name="Delete">
      </command>
      <command
            defaultHandler="eu.hohenegger.scratchpad.ui.handler.e3wrapper.RenameHandlerWrapper"
            id="eu.hohenegger.scratchpad.rename"
            name="Rename">
      </command>
      <command
            defaultHandler="eu.hohenegger.scratchpad.ui.handler.e3wrapper.NewNoteHandlerWrapper"
            id="eu.hohenegger.scratchpad.newNote"
            name="New Note">
      </command>
      <command
            defaultHandler="eu.hohenegger.scratchpad.ui.handler.e3wrapper.ToggleNotificationHandlerWrapper"
            id="eu.hohenegger.scratchpad.ui.notification"
            name="Toggle Change Notification">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="eu.hohenegger.scratchpad.ui.toolbar1">
            <command
                  commandId="eu.hohenegger.scratchpad.newNote"
                  label="New Note"
                  style="push">
            </command>
         </toolbar>
         <command
               commandId="eu.hohenegger.scratchpad.newFile"
               label="New Note"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
